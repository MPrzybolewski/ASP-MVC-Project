@model IEnumerable<YachtShop.Models.Yacht>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Administrator") || User.IsInRole("Seller"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (User.IsInRole("Administrator") || User.IsInRole("Seller"))
                {
                    <a asp-action="Edit" asp-route-id="@item.YachtId">Edit</a> @:| 
                }

                <a asp-action="Details" asp-route-id="@item.YachtId">Details</a> |

                @if (User.IsInRole("Administrator") || User.IsInRole("Seller"))
                {
                    <a asp-action="Delete" asp-route-id="@item.YachtId">Delete</a> 
                }
            </td>
        </tr>
}
    </tbody>
</table>
